<div class="container">
  <div class="row">
  	 <div class="col-sm-10 col-sm-offset-1">

  	   <h2><%= @question.question %></h2>	

  	   <% user_signed_in? ? route = question_vote_question_path(@question) : route = new_user_session_path %>

  	    <div class="row question clearfix">

  	      <div class="col-sm-1 text-center">
  	       <% if @question.voted_question_by? current_user %>
  	         <%= link_to '<span class="fa fa-thumbs-up hand-color" aria-hidden="true"></span>'.html_safe, route, method: :delete %>
  	         <h3><%= @question.vote_questions.count %></h3>
  	       <% else %>
  	          <%= link_to '<span class="fa fa-thumbs-up hand" aria-hidden="true"></span>'.html_safe,route, method: :post %>
  	         <h3><%= @question.vote_questions.count %></h3>
  	       <% end %>	
  	      </div>

          <div class="col-sm-11 description-question">
            <p> <%= markdown(@question.description) %></p>
            <hr width="100%">
             <% @question.commentary_questions.each do |c| %>

               <div class="panel panel-default">
                 
                 <div class="panel-heading">
                   <strong><%= "#{c.user.email}" %></strong>
                   <span class="text-muted"><%= "Comentó hace #{time_ago_in_words(c.created_at)}"%></span>
                 </div>
                 
                 <div class="panel-body">
                   <%= markdown(c.commentary) %>
                 </div>

               </div>
             <% end %>
            <hr width="100%">

            <% if signed_in? %>
              <%= form_for [@question, @question.commentary_questions.new] do |c| %>
                <div class="form-group">
                  <%= c.text_area :commentary, class:"form-control", placeholder: "Agregar un Comentario..." %>
                </div>
                <div class="form-group">
                  <%= c.submit "Comentar", class: "btn btn-primary pull-right"%>
                </div>
              <% end %>
            <% end %>
          </div>

  	    </div>
  	    
  	  </div> <!-- end col-sm-10 col-sm-offset-1-->
      
  </div>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <hr width="100%">
      <h3><%= "#{@question.answers.count} Respuesta(s)"%></h3>
      <% if @question.answers.count == 0 %>
        <span class="text-muted">Si conoces a alguien que conozca la respuesta, por favor avísale, que la necesitamos con urgencia</span>
      <% end %>
      <% if user_signed_in? %>
        <h3>Tu Respuesta</h3>
        <% if @question.answers.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @question.answers.errors.full_message.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_for [@question, @question.answers.new] do |a| %>
          <div class="form-group">
            <%= a.text_area :answer, rows:"8", class:"form-control", placeholder:"Respuesta..."%>
          </div>
          <div class="form-group">
            <%= a.submit "Responder", class:"btn btn-primary pull-right" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>