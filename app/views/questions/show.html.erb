<div class="container">
  <div class="row">
  	 <div class="col-sm-10 col-sm-offset-1">
       <% if @question.voted_question_by? current_user %>
         <%= link_to '<span class="glyphicon glyphicon-thumbs-up"></span>'.html_safe, question_vote_question_path(@question), method: :delete %>
         <p><%= @question.vote_questions.count %></p>
       <% else %>
          <%= link_to '<span class="glyphicon glyphicon-thumbs-up"></span>'.html_safe, question_vote_question_path(@question), method: :post %>
              <p><%= @question.vote_questions.count %></p>
       <% end %>
  	   <h2><%= @question.question %></h2>
  	 </div>
  </div>
	
</div>