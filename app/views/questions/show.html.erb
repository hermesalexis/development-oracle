<div class="container">
  <div class="row">
  	 <div class="col-sm-10 col-sm-offset-1">
  	   <h2><%= @question.question %></h2>	
  	    <div class="row question">
  	     <div class="col-sm-1 text-center">
  	       <% if @question.voted_question_by? current_user %>
  	         <%= link_to '<span class="fa fa-thumbs-up hand-color" aria-hidden="true"></span>'.html_safe, question_vote_question_path(@question), method: :delete %>
  	         <h3><%= @question.vote_questions.count %></h3>
  	       <% else %>
  	          <%= link_to '<span class="fa fa-thumbs-up hand" aria-hidden="true"></span>'.html_safe, question_vote_question_path(@question), method: :post %>
  	             <h3><%= @question.vote_questions.count %></h3>
  	       <% end %>	
  	      </div>
          <div class="col-sm-11 description-question">
            <p><%= @question.description %></p>	
            <hr width="100%">
          </div>
  	    </div>
  	    
  	  </div> <!-- end col-sm-10 col-sm-offset-1-->
  </div>
</div>