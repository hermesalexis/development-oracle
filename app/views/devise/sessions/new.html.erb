
<div class="modal-dialog">
  <div class="modal-content">
    <h2 class="text-center">Ingresar</h2>
    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control input-lg" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="checkbox-inline">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "¿Recordar Tú Contraseña?" %>  
            </div>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit "Ingresar", class:"btn btn-block btn-primary" %>
        </div>
      <% end %>

    </div>
    <div class="modal-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  
</div>




